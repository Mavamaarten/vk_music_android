<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:padding="8dp">

    <ImageView
        android:id="@+id/album_large"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="16dp"
        android:background="@color/md_grey_200"/>

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/dismiss"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/album_large"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        tools:text="What if I go?"/>

    <ImageView
        android:id="@+id/dismiss"
        android:layout_alignParentEnd="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:tint="@color/md_grey_700"
        android:src="@drawable/ic_close_bitmap"/>

    <TextView
        android:id="@+id/artist"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@id/album_large"
        android:ellipsize="end"
        android:textColor="@color/md_grey_700"
        tools:text="Mura Masa"/>

    <LinearLayout
        android:id="@+id/playback_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/album_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_skip_previous_bitmap"
            android:tint="@color/md_grey_700"/>

        <ImageView
            android:id="@+id/play_pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_play_bitmap"
            android:tint="@color/md_grey_700"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_skip_next_bitmap"
            android:tint="@color/md_grey_700"/>

    </LinearLayout>

</RelativeLayout>